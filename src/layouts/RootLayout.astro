---
// import { propsToFilename } from "astro/assets/utils";
import { Navbar, Footer } from "../components/layout";
import type { LayoutProps } from "./types";

type Props = LayoutProps;

const { title, transparentNav, navtext, buttonLink } = Astro.props as Props;

const description =
	"Sacred Heart School, established in 2000, has been dedicated to imparting quality education. With the guiding motto of Wisdom, Compassion, and Dynamism, the institution aims to instill not only academic knowledge but also moral and ethical values in its students. Over the years, we have carved a niche for ourselves as an institution that promotes holistic development and fosters a spirit of inquiry and innovation. Through a blend of rich academic programs, diverse extracurricular and experiential activities, and state-of-the-art facilities, Sacred Heart School provides a nurturing environment for students to flourish and realize their full potential";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />

		<title>{title} | Sacred Heart School</title>
		<meta name="description" content={description} />
		<meta property="og:title" content={title + " | Sacred Heart School"} />
		<meta property="og:description" content={description} />
		<meta name="robots" content="index,follow" />
		<meta
			name="keywords"
			content="Sacred Heart School, Kalyan, School, Primary, Secondary, Junior College"
		/>

		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />

		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon-16x16.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon-32x32.png"
		/>
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- Google Tag Manager -->
		<script>
			(function (w, d, s, l, i) {
				w[l] = w[l] || [];
				w[l].push({
					"gtm.start": new Date().getTime(),
					event: "gtm.js",
				});
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != "dataLayer" ? "&l=" + l : "";
				// @ts-ignore
				j.async = true;
				// @ts-ignore
				j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
				// @ts-ignore
				f.parentNode.insertBefore(j, f);
			})(window, document, "script", "dataLayer", "GTM-PJ4MR6G7");
		</script>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=AW-16733213196">
		</script>
		<script>
  			window.dataLayer = window.dataLayer || [];
  			function gtag(){dataLayer.push(arguments);}
  			gtag('js', new Date());
 
  			gtag('config', 'AW-16733213196');
		</script>
		<!-- End Google Tag Manager -->
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-PJ4MR6G7"
				height="0"
				width="0"
				style="display:none;visibility:hidden"
			>
			</iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->

		<Navbar
			text={navtext}
			transparent={transparentNav}
			button_link={buttonLink}
		/>
		<slot />
		<Footer />
	</body>
</html>

<style is:global>

  	@import url('https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600;700;800&display=swap');
	html {
		background-color: #464545;
		font-family: 'Work Sans', sans-serif;
	}

	.left-bar {
		position: relative;
	}

	.left-bar::before {
		content: "";
		position: absolute;
		left: -24px;
		height: 110%;
		width: 10px;
		@apply bg-primary;
	}
</style>
